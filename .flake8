[flake8]
# Flake8 configuration for LoCoMo project
# This file configures Python linting rules

# Maximum line length
# Extended to 120 to accommodate longer lines in research code
max-line-length = 120

# Ignore specific error codes
ignore =
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator (outdated rule)
    W504,  # line break after binary operator
    E203,  # whitespace before ':' (conflicts with black)
    E266,  # too many leading '#' for block comment
    E402,  # module level import not at top of file
    F401,  # imported but unused (sometimes needed for imports)
    F403,  # 'from module import *' used
    F405,  # name may be undefined, or defined from star imports

# Exclude directories from checking
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    outputs,
    data

# Per-file ignores (if needed for specific files)
per-file-ignores =
    __init__.py:F401,F403

# Show source code for each error
show-source = True

# Show the specific error code in the output
show-pep8 = True
